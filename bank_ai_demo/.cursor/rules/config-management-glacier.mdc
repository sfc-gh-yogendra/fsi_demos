def get_snowflake_config(connection_name: str = None) -> Dict[str, str]:
    """Get Snowflake connection configuration."""
    config = SNOWFLAKE.copy()
    if connection_name:
        config["connection_name"] = connection_name
    elif os.getenv('CONNECTION_NAME'):
        config["connection_name"] = os.getenv('CONNECTION_NAME')
    else:
        raise ValueError("Connection name must be provided via argument or CONNECTION_NAME environment variable")
    return config

def get_scale_config(scale: str = None) -> Dict[str, Any]:
    """Get data generation scale configuration."""
    scale = scale or DEFAULT_SCALE
    if scale not in SCALES:
        raise ValueError(f"Invalid scale '{scale}'. Valid scales: {list(SCALES.keys())}")
    return SCALES[scale]

def get_all_scenarios() -> List[str]:
    """Get list of all available scenarios."""
    return ["aml_kyc_edd", "credit_analysis"]

def validate_scenarios(scenarios: List[str]) -> List[str]:
    """Validate and return list of scenarios."""
    all_scenarios = get_all_scenarios()
    if "all" in scenarios:
        return all_scenarios
    
    invalid_scenarios = [s for s in scenarios if s not in all_scenarios]
    if invalid_scenarios:
        raise ValueError(f"Invalid scenarios: {invalid_scenarios}. Valid: {all_scenarios}")
    return scenarios

def validate_connection(connection_name: str) -> None:
    """Validate connection name parameter."""
    if not connection_name or not connection_name.strip():
        raise ValueError("Connection name cannot be empty")
